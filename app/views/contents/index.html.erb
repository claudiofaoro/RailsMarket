<p id="notice"><%= notice %></p>

<div class="row">
  <% @contents.each do |content| %>
    <div class="col-sm-4">
      <div class="card">
        <%= image_tag content.cover.variant(resize_to_limit: [150, nil]) %> 
        <div class="card-body">
            <h5 class="card-title"><%= content.title %></h5>
            <h6 class="card-subtitle">Sold by <%= content.user.name %></h6>
            <p class="card-text"><%= content.description %></p>
            <p class="card-text"><%= number_to_currency(content.price) %></p>
            <%= link_to 'View', content, class: "btn btn-primary" %>
            <% if content.user == current_user %>
            <br>
            <td><%= link_to 'Edit', edit_content_path(content) %></td>
            <td><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<h1>Contents</h1>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>  
      <th>Title</th>
      <th>Description</th>
      <th>User ID</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <% if content.cover.attached? %>  
          <td><%= image_tag content.cover.variant(resize_to_limit: [150, nil]) %></td>
        <% else %>
          <td>NO IMAGE</td>
        <% end %>
        <td><%= content.title %></td>
        <td><%= content.description %></td>
        <td><%= content.user_id %></td>
        <td><%= content.price %></td>
        <td><%= link_to 'Show', content %></td>
          <% if content.user == current_user %>
            <td><%= link_to 'Edit', edit_content_path(content) %></td>
            <td><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

